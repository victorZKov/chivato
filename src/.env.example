# ==========================================
# Chivato Docker Compose Environment
# ==========================================
# Copy this file to .env and fill in your values
# These values are used by docker-compose.yml
# ==========================================

# Azure AD / Entra ID
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_AUDIENCE=api://your-client-id

# Azure Storage (for production, use real connection string)
# For development, Azurite is used automatically
# AZURE_STORAGE_CONNECTION_STRING=

# Azure AI (optional)
# AZURE_OPENAI_ENDPOINT=
# AZURE_OPENAI_DEPLOYMENT=

# Azure Communication Services (optional)
# AZURE_COMMUNICATION_CONNECTION_STRING=

# Mollie (optional)
# MOLLIE_API_KEY=
